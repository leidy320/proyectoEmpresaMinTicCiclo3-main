@page
@model FrontEnd.Pages.UsuarioActivo.CuentaModel
@{
    Layout = "_LayoutAdmin";
}
<div class="text-center" style="padding-top: 2%;">
    <h2>Cambiar contraseña para el usuario @User.Identity.Name</h2>
</div>
<span class="text-center">
    <div class="row" style="padding-top: 10%;">
        <div class="container border col-md-6 col-sm-12">
             <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Input.PasswordActual"></label>
                    <input asp-for="Input.PasswordActual" class="form-control"/>
                    <span asp-validation-for="Input.PasswordActual" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label>
                    <input asp-for="Input.NewPassword" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span class="text-center">
                            <input type="submit" value="Cambiar password" class="btn btn-success">
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</span>