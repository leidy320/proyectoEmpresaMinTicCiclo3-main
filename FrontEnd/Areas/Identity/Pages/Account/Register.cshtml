@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrame";
}

<span class="text-center">
    <div class="row" style="padding-top: 10%;">
        <div class="container border col-md-6 col-sm-12">
             <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-md-6 enlace-login">
                        <a asp-page="./Login">Login</a>
                    </div>
                    <div class="col-md-6 enlace-registro activo">
                        <h1>Registro</h1>
                    </div>
                </div>
                <div class="form-group row login-icono">
                    <i class='bx bxs-user-account'></i>
                </div>
            <div class="form-group">
                <label for="">Correo electronico</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Confirmar password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col">
                    <span class="text-center">
                        <input type="submit" value="Registrarme" class="btn btn-success">
                    </span>
                </div>
            </div>
            </form>
        </div>
    </div>
</span>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
