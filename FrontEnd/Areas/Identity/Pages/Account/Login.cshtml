@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesi칩n";
}

<span class="text-center">
    <div class="row" style="padding-top: 10%;">
        <div class="container border col-md-6 col-sm-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form-group row">
                    <div class="col-md-6 enlace-login activo">
                        <h1>Login</h1>
                    </div>
                    <div class="col-md-6 enlace-registro">
                        <a asp-page="./Register">Registro</a>
                    </div>
                </div>
                <div class="form-group row login-icono">
                    <i class='bx bxs-key'></i>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="">Correo electronico</label>
                    </div>
                    <div class="col">
                        <input asp-for="Input.Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label for="">Contrase침a</label>
                    </div>
                    <div class="col">
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span class="text-center">
                            <input type="submit" value="Ingresar" class="btn btn-success">
                        </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span class="text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvide mi contrase침a</a>
                        </span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <span class="text-center">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Re-enviar correo de confirmaci칩n</a>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</span>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
